{{ 'customstyle.css' | asset_url | stylesheet_tag }}

<section id="testimonials">
<div class="test__fb">
  {% for block in section.blocks %}
    <div class="test__parent">
        <img src={{ block.settings.image1 | img_url: 'master'}} class="test__qt">
        <p> {{ block.settings.text }} </p>
        <img src={{ block.settings.image | img_url: 'master'}} class="test__img">
        <h2>{{ block.settings.section_title | escape }}</h2>
    </div>
  {% endfor %}
</div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "test_title",
      "label": "Title here",
      "default": "Testimonials",
      "info": "Title of testimonials"
    }
  ],
    "blocks":[
      { 
        "name": "Testimonials",
        "type": "testimonials",
        "settings":[
          {
            "type": "image_picker",
            "id": "image1",
            "label": "t:sections.image-banner.settings.image.label"
             },
             {
             "type": "richtext",
             "id": "text",
             "label": "Text",
             "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
             },
            {
              "type": "image_picker",
              "id": "image",
              "label": "t:sections.image-banner.settings.image.label"
            },
            {
            "type": "text",
            "id": "section_title",
            "label": "Title",
            "default": "Talk about your brand"
            }
        ]
     
      }
  
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Text"
    }
  ]
}
{% endschema %}